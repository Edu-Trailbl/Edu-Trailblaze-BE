  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\EduTrailblaze.Services\EduTrailblaze.Services.csproj">
      <Private>True</Private>
    </ProjectReference>
  </ItemGroup>

  <ItemGroup>
    <Content Update="appsettings.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
